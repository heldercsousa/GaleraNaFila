<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyKaraoke.Contracts;assembly=MyKaraoke.Contracts" x:Class="MyKaraoke.View.StackPage"
             Title="Fila |nomeEvento| - |nomEstabelecimento| - |dataEvento|">

    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto" ColumnDefinitions="*" Padding="20">

        <Label
            Text="Fila"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Grid.Row="0"
            Margin="0,20,0,10"/>

        <Label
            Text="Modo Administrador"
            FontSize="18"
            HorizontalOptions="Center"
            Grid.Row="1"
            Margin="0,0,0,20"/>

        <Button
            Text="Chamar Próximo Participante"
            Clicked="OnCallNextParticipantClicked"
            Grid.Row="2"
            Margin="0,0,0,20"
            HorizontalOptions="FillAndExpand"/>

        <CollectionView
            x:Name="filaCollectionView"
            Grid.Row="3"
            SelectionMode="None"
            >
            <!--CanReorderItems="True"
			CanDragItems="True"-->
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:PessoaListItemDto">
                    <Frame Padding="10" CornerRadius="5" HasShadow="True" BackgroundColor="{StaticResource White}">
                        <Grid ColumnDefinitions="*, Auto, Auto, Auto" RowDefinitions="Auto">
                            <StackLayout Grid.Column="0" VerticalOptions="CenterAndExpand">
                                <Label Text="{Binding NomeCompleto}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                                <Label Text="{Binding NumeroParticipacoesAusencias}"
                                       FontSize="12"
                                       TextColor="Gray"/>
                            </StackLayout>

                            <Button Text="✔"
                                    Clicked="OnParticipouClicked"
                                    CommandParameter="{Binding .}"
                                    Grid.Column="1"
                                    WidthRequest="40" HeightRequest="40" CornerRadius="20"
                                    BackgroundColor="Green" TextColor="White"
                                    VerticalOptions="Center" HorizontalOptions="Center" Margin="5,0"/>

                            <Button Text="✖"
                                    Clicked="OnAusenteClicked"
                                    CommandParameter="{Binding .}"
                                    Grid.Column="2"
                                    WidthRequest="40" HeightRequest="40" CornerRadius="20"
                                    BackgroundColor="Red" TextColor="White"
                                    VerticalOptions="Center" HorizontalOptions="Center" Margin="5,0"/>

                            <Button Text="&#x2193;"
                                    Clicked="OnMoveToBottomClicked"
                                    CommandParameter="{Binding .}"
                                    Grid.Column="3"
                                    WidthRequest="40" HeightRequest="40" CornerRadius="20"
                                    BackgroundColor="LightGray" TextColor="Black"
                                    VerticalOptions="Center" HorizontalOptions="Center" Margin="5,0"/>

                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button
            Text="Mudar para Modo Participante"
            Clicked="OnSwitchToSimpleModeClicked"
            Grid.Row="4"
            VerticalOptions="End"
            HorizontalOptions="Center"
            Margin="0,20,0,20" />
    </Grid>

</ContentPage>
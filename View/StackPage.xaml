<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MyKaraoke.View.Components"
             x:Class="MyKaraoke.View.StackPage"
             Background="{StaticResource AppBackgroundGradient}"
             NavigationPage.HasNavigationBar="False">

    <Grid Padding="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Component -->
        <components:HeaderComponent Grid.Row="0" 
            x:Name="headerComponent"/>

        <!-- Card principal com altura automática -->
        <Frame Grid.Row="1" 
               BorderColor="#533682"
               Background="Transparent"
               Padding="0"
               CornerRadius="27"
               Margin="15,5,15,5"
               HasShadow="False"
               VerticalOptions="Start">

            <Frame Background="{StaticResource CardBackgroundGradient}"
                   CornerRadius="27"
                   HasShadow="False"
                   Padding="20,10,20,20"
                   BorderColor="Transparent"
                   VerticalOptions="Start">

                <!-- Conteudo do card -->
                <Grid RowDefinitions="Auto,Auto" VerticalOptions="Start">

                    <!-- Header do Card com icone, titulo e badge -->
                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,25">
                        <!-- Icone -->
                        <Frame
                               HeightRequest="40"
                               WidthRequest="40"
                               Padding="8"
                               HorizontalOptions="Start"
                               VerticalOptions="Center"
                               Grid.Column="0"
                               BackgroundColor="Transparent">
                            <Image Source="stack_purple.png"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" 
                                   BackgroundColor="Transparent"/>
                        </Frame>

                        <!-- Titulo -->
                        <Label Grid.Column="1" 
                               Text="Fila" 
                               Style="{StaticResource CardTitleStyle}"
                               VerticalOptions="Center" />

                        <!-- Badge de status -->
                        <Frame Grid.Column="2"
                               x:Name="queueStatusBadge"
                               Background="{StaticResource SelectedButtonGradient}"
                               CornerRadius="15"
                               Padding="12,6"
                               HasShadow="False"
                               VerticalOptions="Center"
                               HorizontalOptions="End">
                            <Label x:Name="queueStatusLabel"
                                   Text="---"
                                   TextColor="White"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                    </Grid>

                    <!-- Content area -->
                    <Grid Grid.Row="1" x:Name="contentGrid" VerticalOptions="Start">
                        <!-- Empty queue message com estilos reutilizáveis -->
                        <Frame x:Name="emptyQueueMessage" 
                               IsVisible="True"
                               VerticalOptions="Start"
                               BackgroundColor="Transparent"
                               BorderColor="Transparent"
                               Padding="0"
                               HasShadow="False">

                            <!-- Frame com gradiente reutilizável -->
                            <Frame Style="{StaticResource EmptyQueueFrameStyle}">
                                <StackLayout Spacing="0" VerticalOptions="Start">
                                    <!-- Título principal -->
                                    <Label Text="Não há fila ativa neste momento" 
                                           Style="{StaticResource EmptyQueueTitleStyle}" />

                                    <!-- Instruções com espaçamento uniforme -->
                                    <StackLayout Spacing="15">
                                        <!-- Primeira instrução reformulada com quebra correta -->
                                        <StackLayout Spacing="15" HorizontalOptions="Fill">
                                            <!-- Linha com texto e ícone, quebra natural -->
                                            <StackLayout Spacing="0">
                                                <!-- Primeira parte: "• Toque no botão Nova Fila [ícone]" -->
                                                <StackLayout Orientation="Horizontal" 
                                                             Spacing="6" 
                                                             HorizontalOptions="Start">
                                                    <Label Text="• Toque no botão " 
                                                           Style="{StaticResource EmptyQueueTextStyle}"
                                                           VerticalOptions="Center" />

                                                    <Label Text="Nova Fila" 
                                                           TextColor="White" 
                                                           FontAttributes="Bold"
                                                           FontSize="14"
                                                           VerticalOptions="Center" />

                                                    <!-- 🎯 Ícone Nova Fila mais retangular -->
                                                    <Frame BackgroundColor="Transparent"
                                                           BorderColor="Transparent"
                                                           Padding="1"
                                                           HasShadow="False"
                                                           VerticalOptions="Center"
                                                           HeightRequest="14"
                                                           WidthRequest="26"
                                                           CornerRadius="4">

                                                        <Frame.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#FFB000" Offset="0.0" />
                                                                <GradientStop Color="#FF8F00" Offset="1.0" />
                                                            </LinearGradientBrush>
                                                        </Frame.Background>

                                                        <Label Text="+"
                                                               TextColor="Black"
                                                               FontSize="10"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               Margin="0" />
                                                    </Frame>
                                                </StackLayout>

                                                <!-- Segunda parte: texto continuação sem truncar -->
                                                <Label Text="para iniciar a inclusão dos cantores no karaokê" 
                                                       Style="{StaticResource EmptyQueueTextStyle}"
                                                       Margin="0,2,0,0" />
                                            </StackLayout>
                                        </StackLayout>

                                        <!-- Segunda instrução -->
                                        <Label Style="{StaticResource EmptyQueueTextStyle}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="• " />
                                                    <Span Text="Reative" TextColor="White" FontAttributes="Bold" />
                                                    <Span Text=" a última " />
                                                    <Span Text="fila" TextColor="White" FontAttributes="Bold" />
                                                    <Span Text=" entrando na opção " />
                                                    <Span Text="Histórico" TextColor="White" FontAttributes="Bold" />
                                                    <Span Text=" abaixo" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </Frame>

                        <!-- Active queue content -->
                        <CollectionView x:Name="filaCollectionView"
                                        SelectionMode="None"
                                        IsVisible="False">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10" 
                                          ColumnDefinitions="*, Auto, Auto, Auto" 
                                          RowDefinitions="Auto"
                                          BackgroundColor="White"
                                          Margin="5,2">
                                        <StackLayout Grid.Column="0" VerticalOptions="CenterAndExpand">
                                            <Label Text="{Binding NomeCompleto}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"/>
                                            <Label Text="{Binding NumeroParticipacoesAusencias}"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                        </StackLayout>

                                        <Button Text="OK"
                                                Clicked="OnParticipouClicked"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="1"
                                                WidthRequest="45" 
                                                HeightRequest="40" 
                                                CornerRadius="20"
                                                BackgroundColor="Green" 
                                                TextColor="White"
                                                FontSize="12"
                                                VerticalOptions="Center" 
                                                HorizontalOptions="Center" 
                                                Margin="5,0"/>

                                        <Button Text="X"
                                                Clicked="OnAusenteClicked"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="2"
                                                WidthRequest="40" 
                                                HeightRequest="40" 
                                                CornerRadius="20"
                                                BackgroundColor="Red" 
                                                TextColor="White"
                                                VerticalOptions="Center" 
                                                HorizontalOptions="Center" 
                                                Margin="5,0"/>

                                        <Button Text="v"
                                                Clicked="OnMoveToBottomClicked"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="3"
                                                WidthRequest="40" 
                                                HeightRequest="40" 
                                                CornerRadius="20"
                                                BackgroundColor="LightGray" 
                                                TextColor="Black"
                                                VerticalOptions="Center" 
                                                HorizontalOptions="Center" 

                                                Margin="5,0"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Grid>
            </Frame>
        </Frame>

        <components:InactiveQueueBottomNav Grid.Row="2" 
                                         x:Name="bottomNav" 
                                         IsVisible="True" />

    </Grid>

</ContentPage>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  
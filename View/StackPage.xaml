<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MyKaraoke.View.Components"
             xmlns:local="clr-namespace:MyKaraoke.View"
             xmlns:behaviors="clr-namespace:MyKaraoke.View.Behaviors"
             x:Class="MyKaraoke.View.StackPage"
             x:DataType="local:StackPage"
             Background="{StaticResource AppBackgroundGradient}"
             NavigationPage.HasNavigationBar="False">

    <!-- ✅ CORRETO: Apenas SmartPageLifecycleBehavior -->
    <ContentPage.Behaviors>
        <behaviors:SmartPageLifecycleBehavior 
            NavBar="{x:Reference bottomNav}"
            LoadingIndicator="{x:Reference loadingOverlay}"
            MainContent="{x:Reference mainContentGrid}"
            LoadDataCommand="{Binding LoadDataCommand}"
            EnableAutoBypass="True"
            MaxFailuresBeforeBypass="2" />
    </ContentPage.Behaviors>

    <Grid Padding="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Component -->
        <components:HeaderComponent Grid.Row="0" x:Name="headerComponent"/>

        <!-- Card usando CardWrapperComponent -->
        <Grid Grid.Row="1" x:Name="mainContentGrid">
            <components:CardWrapperComponent TitleText="Fila" 
                                           IconPath="stack_purple.png" 
                                           BadgeIsVisible="True"
                                           BadgeText="{Binding QueueStatusText}">
                <components:CardWrapperComponent.CardContent>
                    <Grid RowDefinitions="*">
                        <!-- Empty queue message -->
                        <Frame x:Name="emptyQueueMessage" 
                               IsVisible="True"
                               VerticalOptions="Start"
                               BackgroundColor="Transparent"
                               BorderColor="Transparent"
                               Padding="0"
                               HasShadow="False">

                            <!-- Frame com gradiente reutilizável -->
                            <Frame Style="{StaticResource EmptyQueueFrameStyle}">
                                <StackLayout Spacing="0" VerticalOptions="Start">
                                    <!-- Título principal -->
                                    <Label Text="Não há fila ativa" 
                                           Style="{StaticResource EmptyQueueTitleStyle}" />

                                    <!-- Instruções com espaçamento uniforme -->
                                    <StackLayout Spacing="15">
                                        <!-- Primeira instrução reformulada com quebra correta -->
                                        <StackLayout Spacing="15" HorizontalOptions="Fill">
                                            <!-- Linha com texto e ícone, quebra natural -->
                                            <StackLayout Spacing="0">
                                                <!-- Primeira parte: "• Toque no botão Nova Fila [ícone]" -->
                                                <StackLayout Orientation="Horizontal" 
                                                             Spacing="6" 
                                                             HorizontalOptions="Start">
                                                    <Label Text="• Toque no botão " 
                                                           Style="{StaticResource EmptyQueueTextStyle}"
                                                           VerticalOptions="Center" />

                                                    <Label Text="Nova Fila" 
                                                           TextColor="White" 
                                                           FontAttributes="Bold"
                                                           FontSize="14"
                                                           VerticalOptions="Center" />

                                                    <!-- 🎯 Ícone Nova Fila mais retangular -->
                                                    <Frame BackgroundColor="Transparent"
                                                           BorderColor="Transparent"
                                                           Padding="1"
                                                           HasShadow="False"
                                                           VerticalOptions="Center"
                                                           HeightRequest="14"
                                                           WidthRequest="26"
                                                           CornerRadius="4">

                                                        <Frame.Background>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                <GradientStop Color="#FFB000" Offset="0.0" />
                                                                <GradientStop Color="#FF8F00" Offset="1.0" />
                                                            </LinearGradientBrush>
                                                        </Frame.Background>

                                                        <Label Text="+"
                                                               TextColor="Black"
                                                               FontSize="10"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"
                                                               Margin="0" />
                                                    </Frame>
                                                </StackLayout>

                                                <!-- Segunda parte: texto continuação sem truncar -->
                                                <Label Text="para iniciar a inclusão dos cantores no karaokê" 
                                                       Style="{StaticResource EmptyQueueTextStyle}"
                                                       Margin="0,2,0,0" />
                                            </StackLayout>
                                        </StackLayout>

                                        <!-- Segunda instrução -->
                                        <Label Style="{StaticResource EmptyQueueTextStyle}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="• " />
                                                    <Span Text="Reative" TextColor="White" FontAttributes="Bold" />
                                                    <Span Text=" a última " />
                                                    <Span Text="fila" TextColor="White" FontAttributes="Bold" />
                                                    <Span Text=" entrando na opção " />
                                                    <Span Text="Histórico" TextColor="White" FontAttributes="Bold" />
                                                    <Span Text=" abaixo" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </Frame>

                        <!-- Active queue content -->
                        <CollectionView x:Name="filaCollectionView"
                                        SelectionMode="None"
                                        IsVisible="False">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="{x:Null}">
                                    <Grid Padding="10" 
                                          ColumnDefinitions="*, Auto, Auto, Auto" 
                                          RowDefinitions="Auto"
                                          BackgroundColor="White"
                                          Margin="5,2">
                                        <StackLayout Grid.Column="0" VerticalOptions="CenterAndExpand">
                                            <Label Text="{Binding NomeCompleto}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"/>
                                            <Label Text="{Binding NumeroParticipacoesAusencias}"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                        </StackLayout>

                                        <Button Text="OK"
                                                Clicked="OnParticipouClicked"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="1"
                                                WidthRequest="45" 
                                                HeightRequest="40" 
                                                CornerRadius="20"
                                                BackgroundColor="Green" 
                                                TextColor="White"
                                                FontSize="12"
                                                VerticalOptions="Center" 
                                                HorizontalOptions="Center" 
                                                Margin="5,0"/>

                                        <Button Text="X"
                                                Clicked="OnAusenteClicked"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="2"
                                                WidthRequest="40" 
                                                HeightRequest="40" 
                                                CornerRadius="20"
                                                BackgroundColor="Red" 
                                                TextColor="White"
                                                VerticalOptions="Center" 
                                                HorizontalOptions="Center" 
                                                Margin="5,0"/>

                                        <Button Text="v"
                                                Clicked="OnMoveToBottomClicked"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="3"
                                                WidthRequest="40" 
                                                HeightRequest="40" 
                                                CornerRadius="20"
                                                BackgroundColor="LightGray" 
                                                TextColor="Black"
                                                VerticalOptions="Center" 
                                                HorizontalOptions="Center" 
                                                Margin="5,0"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </components:CardWrapperComponent.CardContent>
            </components:CardWrapperComponent>

            <components:LoadingOverlayComponent x:Name="loadingOverlay"/>
        </Grid>

        <!-- ✅ CORRIGIDO: InactiveQueueBottomNav SEM SafeNavigationBehavior no XAML -->
        <!-- A navegação segura é feita via código no InactiveQueueBottomNav.xaml.cs -->
        <components:InactiveQueueBottomNav Grid.Row="2" 
                                         x:Name="bottomNav" 
                                         IsVisible="True" />
    </Grid>

</ContentPage>  
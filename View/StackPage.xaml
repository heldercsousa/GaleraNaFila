<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MyKaraoke.View.Components"
             x:Class="MyKaraoke.View.StackPage"
             Background="{StaticResource AppBackgroundGradient}"
             NavigationPage.HasNavigationBar="False">

    <Grid Padding="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header with Back Button and Title -->
        <!--<Grid Grid.Row="0" ColumnDefinitions="Auto,*" Margin="15,0,0,5" Padding="0,0,0,5">
            --><!-- Botao voltar compacto --><!--
            <StackLayout Grid.Column="1" 
             HorizontalOptions="Start" 
             VerticalOptions="Start" 
             Spacing="1">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackButtonClicked" />
                </StackLayout.GestureRecognizers>
                <Image Source="setaesquerda.png" Style="{StaticResource CompactUpperNavIconStyle}" />
                --><!--<Label Text="Sair" Style="{StaticResource CompactUpperNavLabelStyle}" />--><!--
            </StackLayout>
           
            --><!-- Title dinâmico --><!--
            <Label Grid.Column="1"
                   x:Name="headerTitle"
                   Text="My Karaoke"
                   Style="{StaticResource HeaderTitleStyle}"/>
        </Grid>-->
         <!-- Header Component -->
         <components:HeaderComponent Grid.Row="0" 
            x:Name="headerComponent"/>

        <!-- Card principal com altura automática -->
        <Frame Grid.Row="1" 
               BorderColor="#533682"
               Background="Transparent"
               Padding="0"
               CornerRadius="27"
               Margin="15,5,15,5"
               HasShadow="False"
               VerticalOptions="Start">

            <Frame Background="{StaticResource CardBackgroundGradient}"
                   CornerRadius="27"
                   HasShadow="False"
                   Padding="20,10,20,20"
                   BorderColor="Transparent"
                   VerticalOptions="Start">

                <!-- Conteudo do card -->
                <Grid RowDefinitions="Auto,Auto" VerticalOptions="Start">

                    <!-- Header do Card com icone, titulo e badge -->
                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,25">
                        <!-- Icone -->
                        <Frame
                               HeightRequest="40"
                               WidthRequest="40"
                               Padding="8"
                               HorizontalOptions="Start"
                               VerticalOptions="Center"
                               Grid.Column="0"
                               BackgroundColor="Transparent">
                            <Image Source="stack_purple.png"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" 
                                   BackgroundColor="Transparent"/>
                        </Frame>

                        <!-- Titulo -->
                        <Label Grid.Column="1" 
                               Text="Fila" 
                               Style="{StaticResource CardTitleStyle}"
                               VerticalOptions="Center" />

                        <!-- Badge de status -->
                        <Frame Grid.Column="2"
                               x:Name="queueStatusBadge"
                               Background="{StaticResource SelectedButtonGradient}"
                               CornerRadius="15"
                               Padding="12,6"
                               HasShadow="False"
                               VerticalOptions="Center"
                               HorizontalOptions="End">
                            <Label x:Name="queueStatusLabel"
                                   Text="---"
                                   TextColor="White"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                    </Grid>

                    <!-- Content area -->
                    <Grid Grid.Row="1" x:Name="contentGrid" VerticalOptions="Start">
                        <!-- Empty queue message com estilos reutilizáveis -->
                        <Frame x:Name="emptyQueueMessage" 
                               IsVisible="True"
                               VerticalOptions="Start"
                               BackgroundColor="Transparent"
                               BorderColor="Transparent"
                               Padding="0"
                               HasShadow="False"
                               >

                            <!-- Frame com gradiente reutilizável -->
                            <Frame Style="{StaticResource EmptyQueueFrameStyle}">
                                <StackLayout Spacing="0" VerticalOptions="Start" >
                                    <!-- Título principal -->
                                    <Label Text="Não há fila ativa neste momento" 
                                           Style="{StaticResource EmptyQueueTitleStyle}" />

                                    <!-- Instruções com estilos reutilizáveis -->
                                    <StackLayout Spacing="20">
                                        <Label Style="{StaticResource EmptyQueueTextStyle}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="• Toque no botão " />
                                                    <Span Text="Nova Fila" TextColor="White" FontAttributes="Bold" />
                                                    <Span Text=" para iniciar inclusão dos cantores no karaokê" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>

                                        <Label Style="{StaticResource EmptyQueueTextStyle}">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="• " />
                                                    <Span Text="Reative" TextColor="White" FontAttributes="Bold" />
                                                    <Span Text=" a última " />
                                                    <Span Text="fila" TextColor="White" FontAttributes="Bold" />
                                                    <Span Text=" entrando na opção " />
                                                    <Span Text="Histórico" TextColor="White" FontAttributes="Bold" />
                                                    <Span Text=" abaixo" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </Frame>

                        <!-- Active queue content -->
                        <CollectionView x:Name="filaCollectionView"
                                        SelectionMode="None"
                                        IsVisible="False">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="10" 
                                          ColumnDefinitions="*, Auto, Auto, Auto" 
                                          RowDefinitions="Auto"
                                          BackgroundColor="White"
                                          Margin="5,2">
                                        <StackLayout Grid.Column="0" VerticalOptions="CenterAndExpand">
                                            <Label Text="{Binding NomeCompleto}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"/>
                                            <Label Text="{Binding NumeroParticipacoesAusencias}"
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                        </StackLayout>

                                        <Button Text="OK"
                                                Clicked="OnParticipouClicked"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="1"
                                                WidthRequest="45" 
                                                HeightRequest="40" 
                                                CornerRadius="20"
                                                BackgroundColor="Green" 
                                                TextColor="White"
                                                FontSize="12"
                                                VerticalOptions="Center" 
                                                HorizontalOptions="Center" 
                                                Margin="5,0"/>

                                        <Button Text="X"
                                                Clicked="OnAusenteClicked"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="2"
                                                WidthRequest="40" 
                                                HeightRequest="40" 
                                                CornerRadius="20"
                                                BackgroundColor="Red" 
                                                TextColor="White"
                                                VerticalOptions="Center" 
                                                HorizontalOptions="Center" 
                                                Margin="5,0"/>

                                        <Button Text="v"
                                                Clicked="OnMoveToBottomClicked"
                                                CommandParameter="{Binding .}"
                                                Grid.Column="3"
                                                WidthRequest="40" 
                                                HeightRequest="40" 
                                                CornerRadius="20"
                                                BackgroundColor="LightGray" 
                                                TextColor="Black"
                                                VerticalOptions="Center" 
                                                HorizontalOptions="Center" 
                                                Margin="5,0"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Grid>
            </Frame>
        </Frame>

        <components:InactiveQueueBottomNav Grid.Row="2" 
                                         x:Name="bottomNav" 
                                         IsVisible="True" />
       
    </Grid>

</ContentPage>
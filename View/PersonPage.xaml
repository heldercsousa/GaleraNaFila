<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MyKaraoke.View.Components"
             x:Class="MyKaraoke.View.PersonPage"
             Background="{StaticResource AppBackgroundGradient}"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header Component -->
        <components:HeaderComponent Grid.Row="0" 
                                   x:Name="headerComponent"
                                   Title="Entrar na fila"/>

        <!-- Card Wrapper Component -->
        <!-- Card Wrapper Component -->
        <components:CardWrapperComponent Grid.Row="1" 
            TitleText="Preencha"
            IconPath="cantores.png"
            BadgeIsVisible="False">

            <components:CardWrapperComponent.CardContent>
                <!-- Conteúdo do Card -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">

                    <!-- Label "Nome do cantor" -->
                    <Label Grid.Row="0"
                   Text="Nome do cantor"
                   Style="{StaticResource InputLabelStyle}" />

                    <!-- Entry para nome completo usando estilos reutilizáveis -->
                    <Frame Grid.Row="1"
                   Style="{StaticResource InputFieldStyle}">
                        <Entry x:Name="fullNameEntry"  
                       Placeholder="digite o nome"
                       Style="{StaticResource InputEntryStyle}" />
                    </Frame>

                    <!-- Botão Entrar na fila -->
                    <Button Grid.Row="2"
                    Text="Entrar na fila"
                    Style="{StaticResource FormButtonStyle}"
                    Clicked="OnAddToQueueClicked"
                    VerticalOptions="Start" />

                    <!-- Label de validação -->
                    <Label Grid.Row="3"
                   x:Name="validationMessageLabel" 
                   Text=""
                   TextColor="#ff6b6b"
                   FontSize="14"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   IsVisible="False"
                   Margin="0,5,0,0" />

                    <!-- Espaço flexível -->
                    <Grid Grid.Row="4" />
                </Grid>
            </components:CardWrapperComponent.CardContent>
        </components:CardWrapperComponent>
    </Grid>
</ContentPage>
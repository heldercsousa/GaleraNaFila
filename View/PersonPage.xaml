<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MyKaraoke.View.Components"
             x:Class="MyKaraoke.View.PersonPage"
             Background="{StaticResource AppBackgroundGradient}"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header Component -->
        <components:HeaderComponent Grid.Row="0" 
                                   x:Name="headerComponent"
                                   Title="Entrar na fila"/>

        <!-- Card Wrapper Component -->
        <components:CardWrapperComponent Grid.Row="1" 
            TitleText="Preencha"
            IconPath="cantores.png"
            BadgeIsVisible="False">

            <components:CardWrapperComponent.CardContent>
                <!-- ConteÃºdo do Card -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*">

                    <!-- Label "Nome do cantor" -->
                    <Label Grid.Row="0"
                           Text="Nome do cantor"
                           Style="{StaticResource InputLabelStyle}" />

                    <!-- Container do campo de entrada com sugestÃµes -->
                    <Grid Grid.Row="1" RowDefinitions="Auto,Auto">

                        <!-- Entry com limite hÃ­brido de 200 caracteres -->
                        <Frame Grid.Row="0"
                               Style="{StaticResource InputFieldStyle}">
                            <Entry x:Name="fullNameEntry"  
                                   Placeholder="digite o nome completo"
                                   Style="{StaticResource InputEntryStyle}"
                                   MaxLength="200"
                                   TextChanged="OnNameTextChanged" />
                        </Frame>

                        <!-- Lista de sugestÃµes -->
                        <Frame Grid.Row="1"
                               x:Name="suggestionsFrame"
                               IsVisible="False"
                               BackgroundColor="#3b2c6c"
                               BorderColor="#533682"
                               CornerRadius="8"
                               Padding="0"
                               Margin="0,4,0,0"
                               HasShadow="False">

                            <CollectionView x:Name="suggestionsCollectionView"
                                          SelectionMode="Single"
                                          SelectionChanged="OnSuggestionSelected"
                                          HeightRequest="144">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="12,8" 
                                              HeightRequest="48"
                                              BackgroundColor="Transparent">

                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnSuggestionTapped" />
                                            </Grid.GestureRecognizers>

                                            <StackLayout Orientation="Horizontal" 
                                                       VerticalOptions="Center"
                                                       Spacing="12">

                                                <!-- Nome da pessoa -->
                                                <Label Text="{Binding NomeCompleto}"
                                                       TextColor="White"
                                                       FontSize="16"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="StartAndExpand" />

                                                <!-- Contador de participaÃ§Ãµes -->
                                                <Label Text="{Binding ParticipationSummary}"
                                                       TextColor="#b0a8c7"
                                                       FontSize="12"
                                                       VerticalOptions="Center"
                                                       HorizontalOptions="End" />
                                            </StackLayout>

                                            <!-- Separador -->
                                            <BoxView BackgroundColor="#533682"
                                                     HeightRequest="1"
                                                     HorizontalOptions="FillAndExpand"
                                                     VerticalOptions="End"
                                                     Margin="0,0,0,0" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Frame>
                    </Grid>

                    <!-- NOVO: Contador de caracteres (aparece quando >180) -->
                    <Label Grid.Row="2"
                           x:Name="characterCounterLabel"
                           Text="0/200"
                           FontSize="12"
                           HorizontalOptions="End"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="8,2,8,0" />

                    <!-- NOVO: Label "AniversÃ¡rio" -->
                    <Label Grid.Row="3"
                           Text="AniversÃ¡rio (dia/mÃªs)"
                           Style="{StaticResource InputLabelStyle}"
                           Margin="0,12,0,0" />

                    <!-- NOVO: Entry para aniversÃ¡rio -->
                    <Frame Grid.Row="4"
                           Style="{StaticResource InputFieldStyle}">
                        <Entry x:Name="birthdayEntry"  
                               Placeholder="15/03"
                               Style="{StaticResource InputEntryStyle}"
                               MaxLength="5"
                               Keyboard="Numeric" />
                    </Frame>

                    <!-- NOVO: Label "E-mail (opcional)" -->
                    <Label Grid.Row="5"
                           Text="E-mail (opcional)"
                           Style="{StaticResource InputLabelStyle}"
                           Margin="0,12,0,0" />

                    <!-- NOVO: Entry para e-mail opcional -->
                    <Frame Grid.Row="6"
                           Style="{StaticResource InputFieldStyle}">
                        <Entry x:Name="emailEntry"  
                               Placeholder="seuemail@exemplo.com"
                               Style="{StaticResource InputEntryStyle}"
                               MaxLength="100"
                               Keyboard="Email" />
                    </Frame>

                    <!-- Indicador de pessoa nova -->
                    <Label Grid.Row="7"
                           x:Name="newPersonIndicator"
                           Text="âœ¨ Nova pessoa serÃ¡ cadastrada"
                           TextColor="#4CAF50"
                           FontSize="14"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="8,4,0,0" />

                    <!-- Indicador de pessoa existente -->
                    <Label Grid.Row="8"
                           x:Name="existingPersonIndicator"
                           Text="ðŸ‘¤ Pessoa jÃ¡ cadastrada"
                           TextColor="#FF9800"
                           FontSize="14"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="8,4,0,0" />

                    <!-- BotÃ£o Entrar na fila -->
                    <Button Grid.Row="9"
                            Text="Entrar na fila"
                            Style="{StaticResource FormButtonStyle}"
                            Clicked="OnAddToQueueClicked"
                            VerticalOptions="Start"
                            Margin="0,12,0,0" />

                    <!-- Label de validaÃ§Ã£o -->
                    <Label Grid.Row="10"
                           x:Name="validationMessageLabel" 
                           Text=""
                           TextColor="#ff6b6b"
                           FontSize="14"
                           HorizontalOptions="Center"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="0,8,0,0" />

                    <!-- EspaÃ§o flexÃ­vel -->
                    <Grid Grid.Row="11" />
                </Grid>
            </components:CardWrapperComponent.CardContent>
        </components:CardWrapperComponent>
    </Grid>
</ContentPage>
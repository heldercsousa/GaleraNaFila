<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MyKaraoke.View.Components"
             x:Class="MyKaraoke.View.PersonPage"
             Background="{StaticResource AppBackgroundGradient}"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header Component -->
        <components:HeaderComponent Grid.Row="0" 
                                   x:Name="headerComponent"
                                   Title="Entrar na fila"/>

        <!-- Card Wrapper Component -->
        <components:CardWrapperComponent Grid.Row="1" 
            TitleText="Informe o nome"
            IconPath="cantores.png"
            BadgeIsVisible="False">

            <components:CardWrapperComponent.CardContent>
                <!-- Conteúdo do Card -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*">

                    <!-- ETAPA 1: INPUT DE NOME (SEM LABEL) -->
                    <!-- Container do campo de entrada com sugestões -->
                    <Grid Grid.Row="0" RowDefinitions="Auto,Auto">

                        <!-- Entry MAIOR com destaque -->
                        <Frame Grid.Row="0"
                               Style="{StaticResource LargeInputFieldStyle}">
                            <Entry x:Name="fullNameEntry"  
                                   Placeholder="Digite o nome completo"
                                   Style="{StaticResource LargeInputEntryStyle}"
                                   MaxLength="200"
                                   TextChanged="OnNameTextChanged" />
                        </Frame>

                        <!-- Lista de sugestões REDESENHADA -->
                        <Frame Grid.Row="1"
                               x:Name="suggestionsFrame"
                               IsVisible="False"
                               BackgroundColor="Transparent"
                               BorderColor="Transparent"
                               CornerRadius="0"
                               Padding="0"
                               Margin="0,8,0,0"
                               HasShadow="False">

                            <CollectionView x:Name="suggestionsCollectionView"
                                          SelectionMode="Single"
                                          SelectionChanged="OnSuggestionSelected"
                                          HeightRequest="280">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Frame com estilo reutilizável para listas -->
                                        <Frame Style="{StaticResource CardListItemBackgroundStyle}">

                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnSuggestionTapped" />
                                            </Frame.GestureRecognizers>

                                            <Grid RowDefinitions="Auto,Auto,Auto">

                                                <!-- Nome da pessoa -->
                                                <Label Grid.Row="0"
                                                       Text="{Binding NomeCompleto}"
                                                       Style="{StaticResource CardListItemMainTextStyle}">
                                                    <Label.Triggers>
                                                        <!-- Destaque para "Nova pessoa" -->
                                                        <DataTrigger TargetType="Label" Binding="{Binding IsNewPersonOption}" Value="True">
                                                            <Setter Property="TextColor" Value="#4CAF50" />
                                                            <Setter Property="HorizontalTextAlignment" Value="Center" />
                                                        </DataTrigger>
                                                    </Label.Triggers>
                                                </Label>

                                                <!-- E-mail (só para pessoas reais) -->
                                                <Label Grid.Row="1"
                                                       Text="{Binding Email}"
                                                       Style="{StaticResource CardListItemSubTextStyle}"
                                                       LineBreakMode="TailTruncation">
                                                    <Label.Triggers>
                                                        <MultiTrigger TargetType="Label">
                                                            <MultiTrigger.Conditions>
                                                                <BindingCondition Binding="{Binding IsRealPerson}" Value="True" />
                                                                <BindingCondition Binding="{Binding HasEmail}" Value="True" />
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </MultiTrigger>
                                                    </Label.Triggers>
                                                    <Label.Style>
                                                        <Style TargetType="Label" BasedOn="{StaticResource CardListItemSubTextStyle}">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </Style>
                                                    </Label.Style>
                                                </Label>

                                                <!-- Aniversário (só para pessoas reais) -->
                                                <Label Grid.Row="2"
                                                       Text="{Binding BirthdayDisplay}"
                                                       Style="{StaticResource CardListItemAccentTextStyle}">
                                                    <Label.Triggers>
                                                        <MultiTrigger TargetType="Label">
                                                            <MultiTrigger.Conditions>
                                                                <BindingCondition Binding="{Binding IsRealPerson}" Value="True" />
                                                                <BindingCondition Binding="{Binding HasBirthday}" Value="True" />
                                                            </MultiTrigger.Conditions>
                                                            <Setter Property="IsVisible" Value="True" />
                                                        </MultiTrigger>
                                                    </Label.Triggers>
                                                    <Label.Style>
                                                        <Style TargetType="Label" BasedOn="{StaticResource CardListItemAccentTextStyle}">
                                                            <Setter Property="IsVisible" Value="False" />
                                                        </Style>
                                                    </Label.Style>
                                                </Label>

                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Frame>
                    </Grid>

                    <!-- Contador de caracteres -->
                    <Label Grid.Row="1"
                           x:Name="characterCounterLabel"
                           Text="0/200"
                           FontSize="12"
                           HorizontalOptions="End"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="8,4,8,0" />

                    <!-- Botão Próximo -->
                    <Button Grid.Row="2"
                            x:Name="nextButton"
                            Text="Próximo →"
                            Style="{StaticResource FormButtonStyle}"
                            Clicked="OnNextButtonClicked"
                            IsVisible="False"
                            HorizontalOptions="End"
                            Margin="0,16,0,0" />

                    <!-- ETAPA 2: MÊS -->
                    <Label Grid.Row="3"
                           x:Name="monthLabel"
                           Text="Mês do aniversário"
                           Style="{StaticResource InputLabelStyle}"
                           IsVisible="False"
                           Margin="0,24,0,0" />

                    <Frame Grid.Row="4"
                           x:Name="monthFrame"
                           Style="{StaticResource InputFieldStyle}"
                           IsVisible="False">
                        <Picker x:Name="monthPicker"
                                Title="Selecione o mês"
                                TextColor="White"
                                TitleColor="#b0a8c7"
                                BackgroundColor="Transparent" />
                    </Frame>

                    <!-- ETAPA 3: DIA -->
                    <Label Grid.Row="5"
                           x:Name="dayLabel"
                           Text="Dia do aniversário"
                           Style="{StaticResource InputLabelStyle}"
                           IsVisible="False"
                           Margin="0,16,0,0" />

                    <Frame Grid.Row="6"
                           x:Name="dayFrame"
                           Style="{StaticResource InputFieldStyle}"
                           IsVisible="False">
                        <Picker x:Name="dayPicker"
                                Title="Selecione o dia"
                                TextColor="White"
                                TitleColor="#b0a8c7"
                                BackgroundColor="Transparent" />
                    </Frame>

                    <!-- ETAPA 4: EMAIL -->
                    <Label Grid.Row="7"
                           x:Name="emailLabel"
                           Text="E-mail (opcional)"
                           Style="{StaticResource InputLabelStyle}"
                           IsVisible="False"
                           Margin="0,16,0,0" />

                    <Frame Grid.Row="8"
                           x:Name="emailFrame"
                           Style="{StaticResource InputFieldStyle}"
                           IsVisible="False">
                        <Entry x:Name="emailEntry"  
                               Placeholder="seuemail@exemplo.com"
                               Style="{StaticResource InputEntryStyle}"
                               MaxLength="100"
                               Keyboard="Email" />
                    </Frame>

                    <!-- BOTÃO FINAL -->
                    <Button Grid.Row="9"
                            x:Name="addToQueueButton"
                            Text="Entrar na fila"
                            Style="{StaticResource FormButtonStyle}"
                            Clicked="OnAddToQueueClicked"
                            VerticalOptions="Start"
                            IsVisible="False"
                            Margin="0,24,0,0" />

                    <!-- Label de validação -->
                    <Label Grid.Row="10"
                           x:Name="validationMessageLabel" 
                           Text=""
                           TextColor="#ff6b6b"
                           FontSize="14"
                           HorizontalOptions="Center"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="0,12,0,0" />

                    <!-- Espaço flexível -->
                    <Grid Grid.Row="11" HeightRequest="40" />
                </Grid>
            </components:CardWrapperComponent.CardContent>
        </components:CardWrapperComponent>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MyKaraoke.View.Components"
             x:Class="MyKaraoke.View.PersonPage"
             Title="PersonPage"
             Background="{StaticResource AppBackgroundGradient}"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header Component -->
        <components:HeaderComponent Grid.Row="0" 
                                   x:Name="headerComponent"
                                   Title="Entrar na fila"
                                   HeaderMargin="15,40,15,5" />

        <!-- Card Wrapper Component -->
        <components:CardWrapperComponent Grid.Row="1" 
                                        CardMargin="15,10,15,0">
            <components:CardWrapperComponent.CardContent>

                <!-- ConteÃºdo do Card -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*">

                    <!-- TÃ­tulo do Card com Ã­cone -->
                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,25">
                        <Frame BackgroundColor="#e91e63" 
                               CornerRadius="20"
                               HeightRequest="40"
                               WidthRequest="40"
                               Padding="10"
                               HorizontalOptions="Start"
                               VerticalOptions="Center"
                               Grid.Column="0">
                            <Label Text="ðŸ‘¤"
                                   FontSize="20"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="White" />
                        </Frame>
                        <Label Grid.Column="1" 
                               Text="Adicionar Participante" 
                               Style="{StaticResource CardTitleStyle}"
                               VerticalOptions="Center" />
                    </Grid>

                    <!-- Label "Nome do cantor" -->
                    <Label Grid.Row="1"
                           Text="Nome do cantor"
                           Style="{StaticResource InputLabelStyle}" />

                    <!-- Entry para nome completo usando estilos reutilizÃ¡veis -->
                    <Frame Grid.Row="2"
                           Style="{StaticResource InputFieldStyle}">
                        <Entry x:Name="fullNameEntry"  
                               Placeholder="digite o nome"
                               Style="{StaticResource InputEntryStyle}" />
                    </Frame>

                    <!-- BotÃ£o Entrar na fila -->
                    <Button Grid.Row="3"
                            Text="Entrar na fila"
                            Style="{StaticResource FormButtonStyle}"
                            Clicked="OnAddToQueueClicked"
                            VerticalOptions="Start" />

                    <!-- Label de validaÃ§Ã£o -->
                    <Label Grid.Row="4"
                           x:Name="validationMessageLabel" 
                           Text=""
                           TextColor="#ff6b6b"
                           FontSize="14"
                           HorizontalOptions="Center"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="0,5,0,0" />

                    <!-- EspaÃ§o flexÃ­vel -->
                    <Grid Grid.Row="5" />
                </Grid>

            </components:CardWrapperComponent.CardContent>
        </components:CardWrapperComponent>
    </Grid>
</ContentPage>
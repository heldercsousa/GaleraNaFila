<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:MyKaraoke.View.Components"
             x:Class="MyKaraoke.View.PersonPage"
             Background="{StaticResource AppBackgroundGradient}"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto,*">

        <!-- Header Component -->
        <components:HeaderComponent Grid.Row="0" 
                                   x:Name="headerComponent"
                                   Title="Entrar na fila"/>

        <!-- Card Wrapper Component -->
        <components:CardWrapperComponent Grid.Row="1" 
            TitleText="Preencha"
            IconPath="cantores.png"
            BadgeIsVisible="False">

            <components:CardWrapperComponent.CardContent>
                <!-- Conteúdo do Card -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*">

                    <!-- Label "Nome do cantor" -->
                    <Label Grid.Row="0"
                           Text="Nome do cantor"
                           Style="{StaticResource InputLabelStyle}" />

                    <!-- Container do campo de entrada com sugestões -->
                    <Grid Grid.Row="1" RowDefinitions="Auto,Auto">

                        <!-- Entry com limite híbrido de 200 caracteres -->
                        <Frame Grid.Row="0"
                               Style="{StaticResource InputFieldStyle}">
                            <Entry x:Name="fullNameEntry"  
                                   Placeholder="digite o nome completo"
                                   Style="{StaticResource InputEntryStyle}"
                                   MaxLength="200"
                                   TextChanged="OnNameTextChanged" />
                        </Frame>

                        <!-- Lista de sugestões com quebra de linha elegante -->
                        <Frame Grid.Row="1"
                               x:Name="suggestionsFrame"
                               IsVisible="False"
                               BackgroundColor="#3b2c6c"
                               BorderColor="#533682"
                               CornerRadius="8"
                               Padding="0"
                               Margin="0,4,0,0"
                               HasShadow="False">

                            <CollectionView x:Name="suggestionsCollectionView"
                                          SelectionMode="Single"
                                          SelectionChanged="OnSuggestionSelected"
                                          HeightRequest="200">

                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="12,10" 
                                              MinimumHeightRequest="60"
                                              BackgroundColor="Transparent">

                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnSuggestionTapped" />
                                            </Grid.GestureRecognizers>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="1" />
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Nome da pessoa (com quebra elegante) -->
                                            <Label Grid.Row="0" Grid.Column="0"
                                                   Text="{Binding NomeCompleto}"
                                                   TextColor="White"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   LineBreakMode="WordWrap"
                                                   MaxLines="2"
                                                   VerticalOptions="Start"
                                                   HorizontalOptions="FillAndExpand" />

                                            <!-- Contador de participações -->
                                            <StackLayout Grid.Row="0" Grid.Column="1"
                                                       Orientation="Horizontal" 
                                                       VerticalOptions="Start"
                                                       HorizontalOptions="End"
                                                       Spacing="4">

                                                <Label Text="{Binding Participacoes}"
                                                       TextColor="#4CAF50"
                                                       FontSize="12"
                                                       FontAttributes="Bold" />
                                                <Label Text="P"
                                                       TextColor="#4CAF50"
                                                       FontSize="10" />

                                                <Label Text="{Binding Ausencias}"
                                                       TextColor="#FF5722"
                                                       FontSize="12"
                                                       FontAttributes="Bold" />
                                                <Label Text="A"
                                                       TextColor="#FF5722"
                                                       FontSize="10" />
                                            </StackLayout>

                                            <!-- E-mail (se disponível) -->
                                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                   Text="{Binding Email}"
                                                   TextColor="#b0a8c7"
                                                   FontSize="12"
                                                   LineBreakMode="TailTruncation"
                                                   IsVisible="{Binding HasEmail}"
                                                   Margin="0,2,0,0"
                                                   VerticalOptions="Start" />

                                            <!-- Aniversário (se disponível) -->
                                            <Label Grid.Row="2" Grid.Column="0"
                                                   Text="{Binding BirthdayDisplay}"
                                                   TextColor="#e91e63"
                                                   FontSize="12"
                                                   IsVisible="{Binding HasBirthday}"
                                                   VerticalOptions="Start" />

                                            <!-- Separador -->
                                            <BoxView Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                     BackgroundColor="#533682"
                                                     HeightRequest="1"
                                                     HorizontalOptions="FillAndExpand"
                                                     VerticalOptions="End"
                                                     Margin="0,8,0,0" />
                                        </Grid>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Frame>
                    </Grid>

                    <!-- Contador de caracteres (aparece quando >180) -->
                    <Label Grid.Row="2"
                           x:Name="characterCounterLabel"
                           Text="0/200"
                           FontSize="12"
                           HorizontalOptions="End"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="8,2,8,0" />

                    <!-- Label "Aniversário" -->
                    <Label Grid.Row="3"
                           Text="Aniversário (dia/mês)"
                           Style="{StaticResource InputLabelStyle}"
                           Margin="0,12,0,0" />

                    <!-- Entry para aniversário -->
                    <Frame Grid.Row="4"
                           Style="{StaticResource InputFieldStyle}">
                        <Entry x:Name="birthdayEntry"  
                               Placeholder="15/03"
                               Style="{StaticResource InputEntryStyle}"
                               MaxLength="5"
                               Keyboard="Numeric" />
                    </Frame>

                    <!-- Label "E-mail (opcional)" -->
                    <Label Grid.Row="5"
                           Text="E-mail (opcional)"
                           Style="{StaticResource InputLabelStyle}"
                           Margin="0,12,0,0" />

                    <!-- Entry para e-mail opcional -->
                    <Frame Grid.Row="6"
                           Style="{StaticResource InputFieldStyle}">
                        <Entry x:Name="emailEntry"  
                               Placeholder="seuemail@exemplo.com"
                               Style="{StaticResource InputEntryStyle}"
                               MaxLength="100"
                               Keyboard="Email" />
                    </Frame>

                    <!-- Indicador de pessoa nova -->
                    <Label Grid.Row="7"
                           x:Name="newPersonIndicator"
                           Text="✨ Nova pessoa será cadastrada"
                           TextColor="#4CAF50"
                           FontSize="14"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="8,4,0,0" />

                    <!-- Indicador de pessoa existente -->
                    <Label Grid.Row="8"
                           x:Name="existingPersonIndicator"
                           Text="👤 Pessoa já cadastrada"
                           TextColor="#FF9800"
                           FontSize="14"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="8,4,0,0" />

                    <!-- Botão Entrar na fila -->
                    <Button Grid.Row="9"
                            Text="Entrar na fila"
                            Style="{StaticResource FormButtonStyle}"
                            Clicked="OnAddToQueueClicked"
                            VerticalOptions="Start"
                            Margin="0,12,0,0" />

                    <!-- Label de validação -->
                    <Label Grid.Row="10"
                           x:Name="validationMessageLabel" 
                           Text=""
                           TextColor="#ff6b6b"
                           FontSize="14"
                           HorizontalOptions="Center"
                           VerticalOptions="Start"
                           IsVisible="False"
                           Margin="0,8,0,0" />

                    <!-- Espaço flexível -->
                    <!-- Grid.Row="11" usado automaticamente pelo último elemento -->
                </Grid>
            </components:CardWrapperComponent.CardContent>
        </components:CardWrapperComponent>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyKaraoke.View.Components.HeaderComponent"
             x:Name="HeaderRoot">

    <Grid ColumnDefinitions="Auto,*" Margin="{Binding Source={x:Reference HeaderRoot}, Path=HeaderMargin}" Padding="0,0,0,5">
        <Button Grid.Column="0"
                Style="{StaticResource StandardBackButtonStyle}"
                Clicked="OnBackButtonClicked">
            <Button.ImageSource>
                <FileImageSource File="setaesquerda.png" />
            </Button.ImageSource>
        </Button>

		<!-- Sombra externa (glow maior) -->
		<Label Text="{Binding Source={x:Reference HeaderRoot}, Path=Title}"
			   Style="{StaticResource HeaderTitleShadowOuterStyle}" />

		<!-- Sombra mÃ©dia -->
		<Label Text="{Binding Source={x:Reference HeaderRoot}, Path=Title}"
			   Style="{StaticResource HeaderTitleShadowMiddleStyle}" />
		
        <Label Grid.Column="1"
               Text="{Binding Source={x:Reference HeaderRoot}, Path=Title}"
               Style="{StaticResource HeaderTitleStyle}" />
    </Grid>
</ContentView>
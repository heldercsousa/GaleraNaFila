<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyKaraoke.View.Components.HeaderComponent"
             x:Name="HeaderRoot">

    <Grid ColumnDefinitions="Auto,*,Auto" Margin="15,0,0,5" Padding="0,0,0,5">

        <!-- Botão voltar compacto -->
        <StackLayout Grid.Column="0" 
            HorizontalOptions="Start" 
            VerticalOptions="Start" 
            Spacing="1">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnBackButtonClicked" />
            </StackLayout.GestureRecognizers>
            <Image Source="setaesquerda.png" Style="{StaticResource CompactBottomNavIconStyle}" />
        </StackLayout>

        <!-- Sombra externa (glow maior) -->
        <Label Grid.Column="1" Text="{Binding Source={x:Reference HeaderRoot}, Path=Title}"
			   Style="{StaticResource HeaderTitleShadowOuterStyle}" />

        <!-- Sombra média -->
        <Label Grid.Column="1" Text="{Binding Source={x:Reference HeaderRoot}, Path=Title}"
			   Style="{StaticResource HeaderTitleShadowMiddleStyle}" />

        <!-- Title dinâmico -->
        <Label Grid.Column="1"
            x:Name="headerTitle"
            Text="{Binding Source={x:Reference HeaderRoot}, Path=Title}"
            Style="{StaticResource HeaderTitleStyle}"/>

        <!-- Botão Adicionar (+ no canto direito) - CONTROLE CONDICIONAL -->
        <StackLayout Grid.Column="2" 
                     x:Name="addButtonStack"
                     HorizontalOptions="End" 
                     VerticalOptions="Start" 
                     Spacing="1"
                     IsVisible="{Binding Source={x:Reference HeaderRoot}, Path=ShowAddButton}">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnAddButtonClicked" />
            </StackLayout.GestureRecognizers>
            <Image Source="add.png" 
                   Style="{StaticResource CompactBottomNavIconStyle}"
                   Opacity="0.9" />
        </StackLayout>

    </Grid>
</ContentView>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:MyKaraoke.View.Behaviors"
             x:Class="MyKaraoke.View.Components.NavButtonComponent">

    <!-- ✅ BEHAVIOR: Toda a lógica de animação -->
    <ContentView.Behaviors>
        <behaviors:AnimatedButtonBehavior 
            IsAnimated="True"
            HasFadeAnimation="True" 
            HasTranslateAnimation="True"
            HasPulseAnimation="False"
            AnimationContainer="{x:Reference buttonContainer}" />
    </ContentView.Behaviors>

    <StackLayout x:Name="buttonContainer" Style="{StaticResource BaseNavButtonStyle}">
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnButtonTapped" />
        </StackLayout.GestureRecognizers>
        <Image x:Name="buttonIcon" Style="{StaticResource NavButtonIconStyle}" />
        <Label x:Name="buttonLabel" Style="{StaticResource NavButtonLabelStyle}" />
    </StackLayout>
</ContentView>
<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyKaraoke.View.Components.NavButtonComponent">

    <StackLayout x:Name="buttonContainer" Style="{StaticResource BaseNavButtonStyle}">
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnButtonTapped" />
        </StackLayout.GestureRecognizers>

        <Image x:Name="buttonIcon" 
               Style="{StaticResource NavButtonIconStyle}" />

        <Label x:Name="buttonLabel" 
               Style="{StaticResource NavButtonLabelStyle}" />
    </StackLayout>

</ContentView>
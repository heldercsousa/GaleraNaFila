             x:Class="MyKaraoke.View.Components.BaseNavBarComponent">

    <!-- Frame principal com estilos base -->
    <Frame Style="{StaticResource BaseBottomNavBarStyle}">

        <!-- Grid wrapper que cont�m tanto a linha separadora quanto o grid principal -->

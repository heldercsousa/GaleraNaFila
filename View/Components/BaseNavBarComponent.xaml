            <!-- Linha separadora superior -->
            <BoxView Grid.Row="0"
                     BackgroundColor="#533682"
                     HeightRequest="1"
                     HorizontalOptions="Fill"
                     VerticalOptions="Start" />

            <!-- Grid principal com colunas din�micas -->
            <Grid Grid.Row="1"
                  x:Name="buttonsGrid"
                  Padding="5,2,5,2"
                  HorizontalOptions="Fill"
                  VerticalOptions="Fill">

                <!-- Os bot�es ser�o adicionados dinamicamente aqui -->

            </Grid>
        </Grid>
    </Frame>

</ContentView>
<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyKaraoke.View.Components.CardWrapperComponent"
             x:Name="CardRoot">

    <Frame BorderColor="#533682"
           Background="Transparent"
           Padding="0"
           CornerRadius="27"
           Margin="15,5,15,5"
           HasShadow="False"
           VerticalOptions="Start">

        <Frame Background="{StaticResource CardBackgroundGradient}"
               CornerRadius="27"
               HasShadow="False"
               Padding="20,10,20,20"
               BorderColor="Transparent"
               VerticalOptions="Start">

            <!-- Conteudo do card -->
            <Grid RowDefinitions="Auto,*" VerticalOptions="Start">

                <!-- Header do Card com icone, titulo e badge -->
                <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" Margin="0,0,0,25">

                    <!-- Icone -->
                    <Frame
                        HeightRequest="40"
                        WidthRequest="40"
                        Padding="8"
                        HorizontalOptions="Start"
                        VerticalOptions="Center"
                        Grid.Column="0"
                        BackgroundColor="Transparent">

                        <Image Source="{Binding Source={x:Reference CardRoot}, Path=IconPath}"
                           Aspect="AspectFit"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" 
                           BackgroundColor="Transparent"/>

                    </Frame>

                    <!-- Titulo -->
                    <Label Grid.Column="1" 
                        Text="{Binding Source={x:Reference CardRoot}, Path=TitleText}" 
                        Style="{StaticResource CardTitleStyle}"
                        VerticalOptions="Center" />

                    <!-- Badge de status -->
                    <Frame Grid.Column="2"
                        x:Name="queueStatusBadge"
                        Background="{StaticResource SelectedButtonGradient}"
                        CornerRadius="15"
                        Padding="12,6"
                        HasShadow="False"
                        VerticalOptions="Center"
                        HorizontalOptions="End"
                        IsVisible="{Binding Source={x:Reference CardRoot}, Path=BadgeIsVisible}">

                        <Label x:Name="queueStatusLabel"
                           Text="{Binding Source={x:Reference CardRoot}, Path=BadgeText}"
                           TextColor="White"
                           FontSize="14"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                    </Frame>
                </Grid>

                <Grid Grid.Row="1" 
                      x:Name="contentContainer"
                      VerticalOptions="Start"
                      HorizontalOptions="Fill" />
            </Grid>
        </Frame>
    </Frame>
</ContentView>
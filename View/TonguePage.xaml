<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyKaraoke.View"
             x:Class="MyKaraoke.View.TonguePage"
             Background="{StaticResource AppBackgroundGradient}"
             NavigationPage.HasNavigationBar="False">

    <Grid Padding="0,0,0,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Botão voltar padronizado -->
        <Button Grid.Row="0" 
                Style="{StaticResource CompactBackButtonStyle}"
                Clicked="OnBackButtonClicked">
            <Button.ImageSource>
                <FileImageSource File="setaesquerda.png" />
            </Button.ImageSource>
        </Button>

        <!-- Card principal com borda "espessa" (usando frames aninhados) -->
        <Frame Grid.Row="1" 
               BorderColor="#533682"
               Background="Transparent"
               Padding="0"
               CornerRadius="27"
               Margin="15,10,15,0"
               HasShadow="False">

            <Frame Background="{StaticResource CardBackgroundGradient}"
                   CornerRadius="27"
                   HasShadow="False"
                   Padding="20,30,20,20"
                   BorderColor="Transparent">

                <!-- Conteúdo do card -->
                <Grid RowDefinitions="Auto,*">
                    <!-- Título do Card com ícone -->
                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,15">
                        <Frame BackgroundColor="#e91e63" 
                               CornerRadius="20"
                               HeightRequest="40"
                               WidthRequest="40"
                               Padding="10"
                               HorizontalOptions="Start"
                               VerticalOptions="Center"
                               Grid.Column="0">
                            <Image Source="globeorange128_128.png"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center" />
                        </Frame>
                        <Label Grid.Column="1" 
                               Text="Language" 
                               x:Name="titleText"
                               Style="{StaticResource CardTitleStyle}"
                               VerticalOptions="Center" />
                    </Grid>

                    <!-- Container para os botões de idioma -->
                    <ScrollView Grid.Row="1" x:Name="languageScrollView">
                        <VerticalStackLayout x:Name="languagesContainer" Spacing="15">
                            <!-- Botões de idioma serão adicionados programaticamente -->
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Frame>
        </Frame>
    </Grid>
</ContentPage>
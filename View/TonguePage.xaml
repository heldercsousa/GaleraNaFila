<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyKaraoke.View.TonguePage"
             Title="Selecionar Idioma"
             NavigationPage.HasNavigationBar="False">

    <!-- Usando o gradiente horizontal reutilizável conforme padrão (#221b3c → #331e6e) -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#221b3c" Offset="0.0" />
                <GradientStop Color="#331e6e" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Botão voltar no canto superior esquerdo -->
        <Button Grid.Row="0"
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="10,10,0,0"
                HeightRequest="40"
                WidthRequest="40"
                Padding="0"
                Clicked="OnBackButtonClicked"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                Text="←"
                TextColor="White"
                FontSize="24"
                FontAttributes="Bold" />
        
        <!-- Cabeçalho - Apenas o título "MyKaraoke" -->
        <StackLayout Grid.Row="0" Padding="0,40,0,10">
            <Label Text="MyKaraoke" 
                   FontSize="28" 
                   TextColor="White" 
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>
        </StackLayout>

        <!-- Botões de idioma em formato vertical (um por linha) -->
        <ScrollView Grid.Row="2" Margin="20,10,20,0">
            <StackLayout x:Name="languageContainer" Spacing="10">
                
                <!-- Inglês (pré-selecionado) -->
                <Frame BackgroundColor="#d5528a" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="en" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="English" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="United States / United Kingdom" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇺🇸 🇬🇧" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

                <!-- Português -->
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False"
                       BorderColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="pt-BR" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="Português" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="Brasil / Portugal" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇧🇷 🇵🇹" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

                <!-- Espanhol -->
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False"
                       BorderColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="es" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="Español" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="España / América Latina" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇪🇸 🇲🇽" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

                <!-- Francês -->
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False"
                       BorderColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="fr" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="Français" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="France / Canada" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇫🇷 🇨🇦" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

                <!-- Alemão -->
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False"
                       BorderColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="de" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="Deutsch" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="Deutschland / Österreich" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇩🇪 🇦🇹" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

                <!-- Chinês simplificado -->
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False"
                       BorderColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="zh-CN" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="简体中文" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="中国大陆 / 新加坡" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇨🇳 🇸🇬" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

                <!-- Japonês -->
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False"
                       BorderColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="ja" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="日本語" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="日本" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇯🇵" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

                <!-- Coreano -->
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False"
                       BorderColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="ko" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="한국어" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="대한민국" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇰🇷" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

                <!-- Árabe -->
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False"
                       BorderColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="ar" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="العربية" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="المملكة العربية السعودية / مصر" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇸🇦 🇪🇬" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

                <!-- Russo -->
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False"
                       BorderColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="ru" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="Русский" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="Россия" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇷🇺" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

                <!-- Hindi -->
                <Frame BackgroundColor="Transparent" 
                       CornerRadius="6" 
                       Padding="10" 
                       HeightRequest="60" 
                       HasShadow="False"
                       BorderColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLanguageSelected" CommandParameter="hi" />
                    </Frame.GestureRecognizers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" HorizontalOptions="Start" VerticalOptions="Center">
                            <Label Text="हिन्दी" FontSize="16" FontAttributes="Bold" TextColor="White" />
                            <Label Text="भारत" FontSize="12" TextColor="White" />
                        </StackLayout>
                        <Label Grid.Column="1" Text="🇮🇳" FontSize="20" VerticalOptions="Center" TextColor="White" />
                    </Grid>
                </Frame>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
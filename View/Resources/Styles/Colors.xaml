<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cores Principais -->
    <Color x:Key="PrimaryPurple">#8B4CB8</Color>
    <Color x:Key="PrimaryPink">#E91E63</Color>

    <!-- Background gradient for app - MOVED FROM CardStyles.xaml -->
    <LinearGradientBrush x:Key="AppBackgroundGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#221b3c" Offset="0.0" />
        <GradientStop Color="#331e6e" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Gradientes -->
    <LinearGradientBrush x:Key="PurpleGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#8b4cb8" Offset="0.0" />
        <GradientStop Color="#a855c4" Offset="0.5" />
        <GradientStop Color="#6b21a8" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#8b4cb8" Offset="0.0" />
        <GradientStop Color="#6b21a8" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Cores de Surface e Cards -->
    <Color x:Key="CardBackground">#2D1B3D</Color>
    <Color x:Key="CardBackgroundSecondary">#3D2A4F</Color>
    <Color x:Key="SurfaceColor">#1A1024</Color>

    <!-- Cores de Texto -->
    <Color x:Key="TextPrimary">White</Color>
    <Color x:Key="TextSecondary">#B0B0B0</Color>
    <Color x:Key="TextAccent">#E91E63</Color>

    <!-- Cores de Botoes -->
    <Color x:Key="ButtonPrimary">#E91E63</Color>
    <Color x:Key="ButtonSecondary">#8B4CB8</Color>
    <Color x:Key="ButtonDanger">#FF4444</Color>

    <!-- Cores de Status -->
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FF9800</Color>
    <Color x:Key="Error">#F44336</Color>
    <Color x:Key="Info">#2196F3</Color>

    <!-- Transparencias -->
    <Color x:Key="Overlay">#80000000</Color>
    <Color x:Key="CardBorder">#40FFFFFF</Color>

</ResourceDictionary>
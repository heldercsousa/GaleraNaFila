<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:MyKaraoke.View.Converters">

    <!-- Converter para alternar entre estilos baseado em booleano -->
    <converters:BoolToStyleConverter x:Key="BoolToStyleConverter" />
    <converters:BoolToBorderColorConverter x:Key="BoolToBorderColorConverter" />
    <converters:BoolToColorConverter x:Key="BoolToColorConverter" />

    <!-- Background gradient for app -->
    <LinearGradientBrush x:Key="AppBackgroundGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#221b3c" Offset="0.0" />
        <GradientStop Color="#331e6e" Offset="1.0" />
    </LinearGradientBrush>
    
    <!-- Card background gradient -->
    <LinearGradientBrush x:Key="CardBackgroundGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#362c58" Offset="0.0" />
        <GradientStop Color="#3b2c6c" Offset="1.0" />
    </LinearGradientBrush>
    
    <!-- Card Base -->
    <Style x:Key="BaseCardStyle" TargetType="Frame">
        <Setter Property="Background" Value="{StaticResource CardBackgroundGradient}" />
        <Setter Property="BorderColor" Value="#533682" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Opacity" Value="1" />
    </Style>

    <!-- Card Title Style -->
    <Style x:Key="CardTitleStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#e91e63" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="10,0,0,0" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="ZIndex" Value="10" />
    </Style>
    
    <!-- Card Title Icon Container -->
    <Style x:Key="CardTitleIconStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="#e91e63" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="ZIndex" Value="10" />
    </Style>
    
    <!-- Input Field Container Style -->
    <Style x:Key="InputFieldStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="#4a3f6b" />
        <Setter Property="BorderColor" Value="#533682" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="8,0,8,0" />
        <Setter Property="Margin" Value="0,0,0,15" />
    </Style>

    <!-- Input Entry Style with enhanced international support -->
    <Style x:Key="InputEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="PlaceholderColor" Value="#b0a8c7" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="ClearButtonVisibility" Value="Never" />
        <Setter Property="IsSpellCheckEnabled" Value="False" />
        <Setter Property="IsTextPredictionEnabled" Value="False" />
        <Setter Property="Keyboard" Value="Default" />
        <Setter Property="ReturnType" Value="Done" />
        <Setter Property="MaxLength" Value="100" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
    </Style>

    <!-- Input Label Style -->
    <Style x:Key="InputLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#e91e63" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>
    
    <!-- Gradient Button Style (Selected) -->
    <Style x:Key="GradientButtonStyle" TargetType="Frame">
        <Setter Property="BorderColor" Value="#3080e8" />
        <Setter Property="CornerRadius" Value="40" />
        <Setter Property="Padding" Value="15,10" />
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Opacity" Value="1" />
    </Style>
    
    <!-- Secondary Button Style (Not Selected) -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Frame">
        <Setter Property="BorderColor" Value="#6c4794" />
        <Setter Property="BackgroundColor" Value="#4c426f" />
        <Setter Property="CornerRadius" Value="40" />
        <Setter Property="Padding" Value="15,10" />
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Opacity" Value="1" />
    </Style>

    <!-- Common Button Text Style -->
    <Style x:Key="ButtonTextStyle" TargetType="Label">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="ZIndex" Value="10" />
    </Style>
    
    <!-- Back Button Style -->
    <Style x:Key="BackButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="0,0,0,0" />
    </Style>
    
    <!-- Linear Gradient for Selected Buttons -->
    <LinearGradientBrush x:Key="SelectedButtonGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#e52067" Offset="0.0" />
        <GradientStop Color="#904ab4" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Form Button Style - Based on "Ativar fila" button from HTML -->
    <Style x:Key="FormButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource SelectedButtonGradient}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Padding" Value="12,12,24,12" />
        <Setter Property="Margin" Value="0,20,0,10" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Start" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!-- Language Button Selected/Unselected Styles -->
    <Style x:Key="LanguageButtonSelectedStyle" TargetType="Frame">
        <Setter Property="Background" Value="{StaticResource SelectedButtonGradient}" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="HeightRequest" Value="55" />
        <Setter Property="CornerRadius" Value="40" />
        <Setter Property="Padding" Value="15,5" />
    </Style>

    <Style x:Key="LanguageButtonUnselectedStyle" TargetType="Frame">
        <Setter Property="Background" Value="#4c426f" />
        <Setter Property="BorderColor" Value="#6c4794" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="HeightRequest" Value="55" />
        <Setter Property="CornerRadius" Value="40" />
        <Setter Property="Padding" Value="15,5" />
    </Style>
    
    <!-- Estilos específicos para os Labels dentro dos botões de língua -->
    <Style x:Key="LanguageNameStyle" TargetType="Label">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="ZIndex" Value="10" />
    </Style>
    
    <Style x:Key="LanguageFlagStyle" TargetType="Label">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Opacity" Value="1" />
        <Setter Property="ZIndex" Value="10" />
    </Style>
</ResourceDictionary>
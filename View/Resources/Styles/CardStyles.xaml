<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ============================================================================ -->
    <!-- ðŸ”¥ INPUT FIELD STYLES -->
    <!-- ============================================================================ -->

    <Style x:Key="InputFieldStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="#4a3f6b" />
        <Setter Property="BorderColor" Value="#533682" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="8,0,8,0" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style x:Key="InputEntryStyle" TargetType="Entry">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="PlaceholderColor" Value="#b0a8c7" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Keyboard" Value="Text" />
        <Setter Property="MaxLength" Value="100" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="IsSpellCheckEnabled" Value="False" />
        <Setter Property="IsTextPredictionEnabled" Value="False" />
        <Setter Property="ClearButtonVisibility" Value="Never" />
    </Style>

    <Style x:Key="LargeInputEntryStyle" TargetType="Entry" BasedOn="{StaticResource InputEntryStyle}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="MinimumHeightRequest" Value="50" />
    </Style>

    <Style x:Key="LargeInputFieldStyle" TargetType="Frame" BasedOn="{StaticResource InputFieldStyle}">
        <Setter Property="Padding" Value="15,12" />
        <Setter Property="MinimumHeightRequest" Value="50" />
    </Style>

    <!-- ============================================================================ -->
    <!-- BACKGROUND GRADIENTS -->
    <!-- ============================================================================ -->

    <LinearGradientBrush x:Key="AppBackgroundGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#1A1024" Offset="0.0" />
        <GradientStop Color="#2D1B69" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#33275d" Offset="0.0" />
        <GradientStop Color="#513486" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SelectedButtonGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#e52067" Offset="0.0" />
        <GradientStop Color="#904ab4" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="EmptyQueueGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#4b3c6d" Offset="0.0" />
        <GradientStop Color="#684992" Offset="0.5" />
    </LinearGradientBrush>

    <!-- ============================================================================ -->
    <!-- CARD LIST ITEM STYLES -->
    <!-- ============================================================================ -->

    <Style x:Key="CardListItemBackgroundStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="#5e3f84" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="15" />
        <Setter Property="Margin" Value="0,5" />
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#4A3B6B" Offset="0.0" />
                    <GradientStop Color="#5B4485" Offset="0.5" />
                    <GradientStop Color="#6E4B98" Offset="1.0" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CardListItemSubTextIconStyle" TargetType="Image">
        <Setter Property="HeightRequest" Value="16" />
        <Setter Property="WidthRequest" Value="16" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="CardListItemMainTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="VerticalOptions" Value="Start" />
        <Setter Property="HorizontalOptions" Value="Fill"  />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
        <Setter Property="MaxLines" Value="2" />
        <Setter Property="Margin" Value="0,0,0,6" />
    </Style>

    <Style x:Key="CardListItemSubTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="#b0a8c7" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style x:Key="CardListItemAccentTextStyle" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="#b0a8c7" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="LineBreakMode" Value="NoWrap" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style x:Key="CardListItemHighlightBackgroundStyle" TargetType="Frame" BasedOn="{StaticResource CardListItemBackgroundStyle}">
        <Setter Property="BackgroundColor" Value="#1B5E20" />
        <Setter Property="BorderColor" Value="#4CAF50" />
    </Style>

    <!-- ============================================================================ -->
    <!-- BUTTON STYLES -->
    <!-- ============================================================================ -->

    <Style x:Key="FormButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Padding" Value="20,12,24,12" />
        <Setter Property="Margin" Value="0,20,0,0" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Background" Value="{StaticResource SelectedButtonGradient}" />
    </Style>

    <Style x:Key="CompactBackButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="WidthRequest" Value="40" />
        <Setter Property="HeightRequest" Value="40" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <Style x:Key="BackButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="WidthRequest" Value="50" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="CornerRadius" Value="25" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <Style x:Key="StandardBackButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="WidthRequest" Value="32" />
        <Setter Property="HeightRequest" Value="32" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style x:Key="GradientButtonStyle" TargetType="Button">
        <Setter Property="TextColor" Value="White" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CornerRadius" Value="15" />
        <Setter Property="Padding" Value="20,10" />
        <Setter Property="Background" Value="{StaticResource SelectedButtonGradient}" />
    </Style>

    <!-- ============================================================================ -->
    <!-- LABEL STYLES -->
    <!-- ============================================================================ -->

    <Style x:Key="InputLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#e91e63" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style x:Key="HeaderTitleShadowBaseStyle" TargetType="Label">
        <Setter Property="TextColor" Value="Transparent" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <Style x:Key="HeaderTitleShadowOuterStyle" TargetType="Label" BasedOn="{StaticResource HeaderTitleShadowBaseStyle}">
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#BB86FC" Offset="0,0" Radius="20" Opacity="0.8" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="HeaderTitleShadowMiddleStyle" TargetType="Label" BasedOn="{StaticResource HeaderTitleShadowBaseStyle}">
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#BB86FC" Offset="0,0" Radius="10" Opacity="0.9" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="HeaderTitleStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#BB86FC" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#BB86FC" Offset="0,0" Radius="5" Opacity="1" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CardTitleStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#e91e63" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="15,0,0,0" />
    </Style>

    <Style x:Key="EmptyQueueTitleStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#FFFFFF" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,10" />
    </Style>

    <Style x:Key="EmptyQueueTextStyle" TargetType="Label">
        <Setter Property="TextColor" Value="#b0a8c7" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="Margin" Value="0" />
    </Style>

    <!-- ============================================================================ -->
    <!-- FRAME STYLES -->
    <!-- ============================================================================ -->

    <Style x:Key="EmptyQueueFrameStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="BorderColor" Value="#533682" />
        <Setter Property="CornerRadius" Value="15" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Padding" Value="30,25" />
        <Setter Property="Margin" Value="0,0" />
        <Setter Property="Background" Value="{StaticResource EmptyQueueGradient}" />
    </Style>

</ResourceDictionary>
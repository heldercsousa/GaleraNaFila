<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="GaleraNaFila.HomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Fila de Karaokê">

    <Grid>
        <!-- Background usando seu gradiente definido -->
        <Rectangle Fill="{StaticResource BackgroundGradient}" />

        <!-- Main Content -->
        <ScrollView>
            <StackLayout Padding="20" Spacing="25">

                <!-- Header Section -->
                <StackLayout Spacing="15" Margin="0,30,0,40">
                    <!-- Logo -->
                    <Image Source="logo.png" 
                           HeightRequest="120" 
                           WidthRequest="120"
                           HorizontalOptions="Center" />

                    <!-- Title usando seu estilo -->
                    <Label Text="Fila de Karaokê"
                           Style="{StaticResource TitleStyle}"
                           FontSize="32" />
                </StackLayout>

                <!-- Queue Status Card usando seu CardStyle -->
                <Frame Style="{StaticResource CardStyle}"
                       BackgroundColor="White"
                       Padding="30">

                    <StackLayout Spacing="20">
                        <!-- Círculo branco com ponto vermelho -->
                        <Grid WidthRequest="80" HeightRequest="80" HorizontalOptions="Center">
                            <Ellipse Fill="White" 
                                     Stroke="#E0E0E0"
                                     StrokeThickness="2" />
                            <Ellipse Fill="#E74C3C" 
                                     WidthRequest="12" 
                                     HeightRequest="12" />
                        </Grid>

                        <!-- Texto FILA -->
                        <Label Text="FILA" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               TextColor="#333333" 
                               HorizontalOptions="Center" />

                        <!-- Texto KARAOKÊ -->
                        <Label Text="KARAOKÊ" 
                               FontSize="14" 
                               TextColor="#666666" 
                               HorizontalOptions="Center"
                               Margin="0,-15,0,0" />
                    </StackLayout>
                </Frame>

                <!-- Action Buttons usando seus estilos -->
                <StackLayout Spacing="20" Margin="0,20,0,0">

                    <!-- Create New Queue Button -->
                    <Frame BackgroundColor="Transparent" 
                           BorderColor="#4ECDC4"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="0">
                        <Button x:Name="CreateQueueButton"
                                Text="+ Criar nova fila"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextColor="White"
                                BackgroundColor="Transparent"
                                HeightRequest="60"
                                Clicked="OnCreateQueueClicked" />
                    </Frame>

                    <Label Text="Clique no botão acima para iniciar uma nova fila de participantes do zero definindo também o evento"
                           Style="{StaticResource SubtitleStyle}"
                           FontSize="12"
                           Margin="20,0" />

                    <!-- Closed Queues Button usando seu estilo -->
                    <Button x:Name="ClosedQueuesButton"
                            Text="Filas encerradas"
                            Style="{StaticResource PrimaryButtonStyle}"
                            BackgroundColor="#F39C12"
                            FontSize="18"
                            HeightRequest="60"
                            Clicked="OnClosedQueuesClicked" />

                    <Label Text="Lista da fila já finalizadas, ordenadas por data decrescente"
                           Style="{StaticResource SubtitleStyle}"
                           FontSize="12"
                           Margin="20,0" />
                </StackLayout>

                <!-- Footer -->
                <StackLayout Spacing="5" Margin="0,40,0,20">
                    <Label Text="by helder.ezuse@gmail.com"
                           FontSize="11"
                           TextColor="{StaticResource TextSecondary}"
                           HorizontalOptions="Center" />

                    <Label Text="free commercial use under apache license"
                           FontSize="9"
                           TextColor="{StaticResource TextSecondary}"
                           Opacity="0.8"
                           HorizontalOptions="Center" />

                    <Label Text="build 0.123.334"
                           FontSize="9"
                           TextColor="{StaticResource TextSecondary}"
                           Opacity="0.8"
                           HorizontalOptions="Center" />
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>